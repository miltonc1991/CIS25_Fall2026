#include <iostream>
using namespace std;

int main() {
    int option;

    cout << "=== MENU ===" << endl;
    cout << "1. Greet" << endl;
    cout << "2. Multiply Numbers" << endl;
    cout << "3. Quit" << endl;
    cout << "Choose an option: ";
    cin >> option;

    if (option == 1) {
        cout << "Hey there! Hope you're doing well." << endl;
    }

    if (option == 2) {
        int x, y;
        cout << "Enter first number: ";
        cin >> x;
        cout << "Enter second number: ";
        cin >> y;
        cout << "The result is: " << x * y << endl;
    }

    if (option == 3) {
        cout << "Exiting program..." << endl;
    }

    if (option < 1 || option > 3) {
        cout << "Invalid option, try again." << endl;
    }

    return 0;
}
