#include <iostream>
#include <fstream>
#include <string>

using namespace std;

class Team {
public:
    string name;
    int wins;
    int losses;
    Team(string n, int w, int l) : name(n), wins(w), losses(l) {}
    double winPercentage() {
        return static_cast<double>(wins) / (wins + losses);
    }

    void saveToFile(const string& filename) {
        ofstream file(filename);
        if (file.is_open()) {
            file << name << endl;
            file << wins << endl;
            file << losses << endl;
            file.close();
        } else {
            cerr << "Error opening file for writing: " << filename << endl;
        }
    }

    void loadFromFile(const string& filename) {
        ifstream file(filename);
        if (file.is_open()) {
            getline(file, name);
            file >> wins;
            file >> losses;
            file.close();
        } else {
            cerr << "Error opening file for reading: " << filename << endl;
        }
    }
};

int main() {
    Team team("Sharks", 10, 5);
    cout << "Team: " << team.name << ", Win Percentage: " << team.winPercentage() << endl;

    team.saveToFile("team_data.txt");

    Team loadedTeam("", 0, 0);
    loadedTeam.loadFromFile("team_data.txt");
    cout << "Loaded Team: " << loadedTeam.name << ", Win Percentage: " << loadedTeam.winPercentage() << endl;

    return 0;
}