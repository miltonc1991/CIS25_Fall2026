#include <iostream>
#include <cstdlib>
#include <ctime>
using namespace std;

void play();
void instructions();
void funFact();

int main() {
    int option;

    cout << "=== ROCK PAPER SCISSORS ===" << endl;
    cout << "1. Play" << endl;
    cout << "2. Instructions" << endl;
    cout << "3. Fun Fact" << endl;
    cout << "Choose an option: ";
    cin >> option;

    if (option == 1) {
        play();
    }

    if (option == 2) {
        instructions();
    }

    if (option == 3) {
        funFact();
    }

    if (option < 1 || option > 3) {
        cout << "Invalid option" << endl;
    }

    return 0;
}

void play() {
    srand(static_cast<unsigned int>(time(0)));
    int computer = rand() % 3 + 1;
    int player;

    cout << "1=Rock, 2=Paper, 3=Scissors. Your choice: ";
    cin >> player;

    cout << "Computer chose: " << computer << endl;

    if (player == computer) {
        cout << "It's a tie!" << endl;
    }
    if ((player == 1 && computer == 3) || (player == 2 && computer == 1) || (player == 3 && computer == 2)) {
        cout << "You win!" << endl;
    }
    if ((computer == 1 && player == 3) || (computer == 2 && player == 1) || (computer == 3 && player == 2)) {
        cout << "You lose!" << endl;
    }
}

void instructions() {
    cout << "Pick 1 for Rock, 2 for Paper, 3 for Scissors. Rock beats Scissors, Paper beats Rock, Scissors beats Paper." << endl;
}

void funFact() {
    cout << "Fun Fact: Rock-Paper-Scissors comes from China over 2000 years ago!" << endl;
}
